<Page
    x:Class="FroggerStarter.View.PlayAgainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FroggerStarter.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Width="{StaticResource HighScoreAddWidth}"
    Height="{StaticResource HighScoreAddHeight}">

    <Canvas Width="auto" Background="Black">
        <Button Height="52" Width="192" Canvas.ZIndex="1" Content="Play Again?"
                Canvas.Left="154" Canvas.Top="49" FontFamily="Berlin Sans FB" FontSize="25" Background="#FF20E800"
                BorderBrush="White" FocusVisualPrimaryBrush="#FFE6BAB8" Foreground="Black"
                FocusVisualSecondaryBrush="#99FFFFFF" Click="Button_Click" />

        <Button Height="52" Width="192" Canvas.ZIndex="1" Content="View HighScores"
                Canvas.Left="154" Canvas.Top="199" FontFamily="Berlin Sans FB" FontSize="25" Background="#FF20E800"
                BorderBrush="White" FocusVisualPrimaryBrush="#FFE6BAB8" Foreground="Black"
                FocusVisualSecondaryBrush="#99FFFFFF" Click="Button_Click_1" />
    </Canvas>
</Page>